<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.iu.s1.qna.QnaDAO">
    
   <update id="update" parameterType="QnaDTO">
		update qna
		set title=#{title}, Contents=#{Contents}
		
		where num=#{num}
	</update>

	<select id="detail" parameterType="QnaDTO"
		resultType="QnaDTO">
		SELECT * FROM QNA WHERE NUM = #{num}
	</select>
<!-- 파라미터는 어디선가 데이터를 받아올게 있을때 = #{} 가 있을때 -->
	<select id="total" resultType="java.lang.Long" parameterType="Pager">
		SELECT COUNT(NUM) FROM QNA
		WHERE 
		    NUM>0 
        	AND 
        		
       		<choose> <!-- #{kind}로 쓰는게 아닌 getter의 이름을 바로 쓸것 -->
        		<when test="kind=='col1'">
        			TITLE
        		</when>
        		<when test="kind=='col2'">
        			CONTENTS
        		</when>
        		<otherwise>
        			WRITER
        		</otherwise>
        	</choose>
        
         LIKE '%' || #{search} || '%'
	</select>

	<!-- id = DAO의 메서드명 -->
	<select id="list" parameterType="Pager" resultType="QnaDTO">
		SELECT * FROM
    		(SELECT rownum R, B.* FROM<!-- #{} 은 Pager의 getter의 이름 -->
        		(SELECT * FROM QNA WHERE 
        		NUM>0 
        		AND 
        		
        		<choose> <!-- #{kind}로 쓰는게 아닌 getter의 이름을 바로 쓸것 -->
        			<when test="kind=='col1'">
        			TITLE
        		</when>
        		<when test="kind=='col2'">
        			CONTENTS
        		</when>
        		<otherwise>
        			WRITER
        		</otherwise>
        		</choose>
        		
        		 LIKE '%' || #{search} || '%'
        			ORDER BY NUM DESC
        		) B
   			 )
		WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
	
	<!-- id = DAO의 메서드명 -->
	<insert id="add" parameterType="QnaDTO">
		INSERT INTO QNA (NUM, TITLE, CONTENTS, WRITER,
		REGDATE, HIT, REF, STEP, DEPTH)
		VALUES (QNANUM_SEQ.NEXTVAL, #{title}, #{contents}, #{writer},
		sysDate, 0, 0, 0, 0)
	</insert>

	<!-- id = DAO의 메서드명 -->
	<delete id="delete" parameterType="QnaDTO">
		delete QNA where NUM = #{num}

	</delete>
    
	</mapper>